<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><p></p>

  <%= f.label :ingredients %><br>
  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %><br>

    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %><p></p>
  <% end %>

  <%= f.submit %>
<% end %>
